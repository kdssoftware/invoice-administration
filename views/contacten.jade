//- tasks.jade
html
    head
        title=title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    body
          header          
                  button(type="button",href='/',class="btn btn-outline-primary") Home
                  button(type="button",href='/edit-profile',class="btn btn-outline-primary") Mijn profiel
                  a(style="max-width:10%;max-height:5%",href="https://identity.basecone.com/authentication/login")
                      img(style="max-width:8%;max-height:5%",src="https://www.itjobs.pt/empresa/basecone/logo/social", alt="basecone")
          div(class="jumbotron")          
            p(class="lead")=description
            hr
            table(class="table")
                tr(class="thead-dark")
                    td
                      a(href='/add-contact',class="button") 
                        button(type="button",href='/add-contact',class="btn btn-secondary btn-lg btn-block") Nieuwe Contactpersoon
                        
                tr
                    th(scope="col") Contactpersonen
                    th(scope="col") Facturen
                    th(scope="col") Actie
                
                each contact in contactenLijst
                    tr
                        td=contact.contactPersoon
                        td
                            a(href='/facturen/'+contact._id,class="button") Facturen
                        td
                            ul(class="list-group")
                              li(class="list-group-item")
                                a(href='/edit-contact/'+contact._id,class="button") aanpassen
                              li(class="list-group-item")
                                a(href='/delete-contact/'+contact._id,class="button") verwijder
                              li(class="list-group-item")
                                a(href='/view-contact/'+contact._id class="button") bekijk
