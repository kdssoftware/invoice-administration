html
  head
    title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script.
  body
    header
      nav(class="navbar navbar-expand-md navbar-#{settings.nav} bg-#{settings.thema}")
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="navbarNav")  
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class="nav-link active" , href='/index'+"/"+loginHash) Home
            li(class="nav-item")
              a(class="nav-link active", href='/edit-profile'+"/"+loginHash) Mijn profiel    
            li(class="nav-item")
              a(class="nav-link active", href='/settings'+"/"+loginHash) Settings
            li(class="nav-item")
              a(class="nav-link", href='https://identity.basecone.com/authentication/login')
                img(width="100", height="24", src="/basecone.png", alt="basecone")
          span(class="navbar-text")
            div(class="row")
              div(class="col-4 mr-auto")
                button(type="button", class="btn btn-light btn-sm", disabled)
                  h6=description
              div(class="col-8")  
                form(class="form-inline" action="/zoeken/#{loginHash}", method="post")
                  input(class="form-control" type="search" placeholder="zoeken" aria-label="Search" name="search")
    main
      div(class="jumbotron")  
        div(class="row no-gutters")
          div(class="col-9 mr-auto")
            p(class="lead") contact aanpassen
          div(class="col-2")
            a(href='/contacten'+"/#{loginHash}",class="button")
              if settings.thema == "light"
                button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block") terug
              if settings.thema != "light"
                button(type="button",class="btn btn-#{settings.thema} btn-lg btn-block") terug
        hr
        form(action='/edit-contact/'+contact._id+"/#{loginHash}" ,method='post')
          p=msg
          div(class="form-row")
            div(class="form-group col-md-5")
              label(for="title") Contact persoon *
              input(type="text",class="form-control",value=contact.contactPersoon,name="contactPersoon" required)    
            div(class="form-group col-md-2")          
            div(class="form-group col-md-5")
              label(for="title") Firma
              input(type="text",class="form-control",value=contact.firma,name="firma")
            div(class="form-group col-md-3")
              label(for="title") Straatnaam *
              input(type="text",class="form-control",value=contact.straat,name="straat" required)                                
            div(class="form-group col-md-2")
              label(for="title") Straat Nr
              input(type="text",class="form-control",value=contact.straatNr,name="straatNr")
            div(class="col-md-2")
            div(class="form-group col-md-3")
              label(for="title") E-mail
              input(type="text",class="form-control",value=contact.mail,name="mail",placeholder="voorbeel@email.be")
            div(class="form-group col-md-2")
              label(for="title") BTW-nummer
              input(type="text",class="form-control",value=contact.btwNr,name="btwNr")
            div(class="form-group col-md-2")
              label(for="title") Rekeningnr
              input(type="text",class="form-control",value=contact.rekeningnr,name="rekeningnr")
            div(class="form-group col-md-1")
              label(for="title") Postcode
              input(type="number",class="form-control",value=contact.postcode,name="postcode")
            div(class="form-group col-md-2")
              label(for="title") Plaatsnaam *
              input(type="text",class="form-control",value=contact.plaats,name="plaats" required)
            div(class="col-md-2")
            div(id="mail1" class="form-group col-md-3" )
              label(for="title") E-mail 2
              input(type="text", class="form-control",value="#{contact.mail1}",name="mail1", placeholder="voorbeeld@email.be")
            div(class="col-md-7")
            div(id="mail2" class="form-group col-md-3")
              label(for="title") E-mail 3
              input(type="text", class="form-control",value="#{contact.mail2}",name="mail2", placeholder="voorbeeld@email.be")
          hr
          button(type="submit",class="btn btn-#{settings.oppo}") bijwerken
