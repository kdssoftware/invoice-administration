form(action='/edit/profile/'+profile._id, method='post')
    div(class="form-row row")
        div(class="form-group col-xl-5 col-md-6 offset-xl-0 offset-md-0 offset-sm-0 ")
            label(for="title") #{__('Your name')}*
            input(type="text", class="form-control", value=profile.name, name="name", placeholder="Jan Janssens", required="true")
        div(class="form-group col-xl-6 col-md-6 offset-xl-1 offset-md-0 offset-sm-0")
            label(for="title") #{__('VAT number')}
            input(type="text", class="form-control", value=profile.vat, name="vat", placeholder="BE 0000.000.000")
        div(class="form-group col-xl-5 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") #{__('Firm name')}
            input(type="text", class="form-control", value=profile.firm, name="firm", placeholder="firma en co.")
        div(class="form-group col-xl-3 col-md-6 offset-xl-1 offset-md-0 offset-sm-0")
            label(for="title") #{__('IBAN')}
            input(type="text", class="form-control", value=profile.iban, name="iban", placeholder="BE77 7777 7777 7777")
        div(class="form-group col-xl-3 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") BIC-nr
            input(type="text", class="form-control", value=profile.bic, name="bic", placeholder="KREDBEBB")
        div(class="form-group col-xl-3 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") #{__('Street name')}*
            input(type="text", class="form-control", value=profile.street, name="street", placeholder="grotestraat", required="true")
        div(class="form-group col-xl-2 col-md-6")
            label(for="title") #{__('Street Nr')}*
            input(type="text", class="form-control", value=profile.streetNr, name="streetNr", placeholder="12a", required="true")
        div(class="form-group col-xl-2 col-md-6 offset-xl-1 offset-md-0 offset-sm-0")
            label(for="title") #{__('Telephone Nr')}
            input(type="text", class="form-control", value=profile.tel, name="tel", placeholder="+32487654321", required="true")
        div(class="form-group col-xl-2 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") #{__('Place')}*
            input(type="text", class="form-control", value=profile.place, name="place", placeholder="Gent", required="true")
        div(class="form-group col-xl-2 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") #{__('Postal')}*
            input(type="number", class="form-control", value=profile.postal, name="postal", placeholder="1234", required="true")
        div(class="form-group col-xl-5 col-md-6 offset-xl-0 offset-md-0 offset-sm-0")
            label(for="title") E-mail*
            input(type="text", class="form-control", value=profile.email, name="email", placeholder="voorbeeld@email.be", required="true")
    div.row
        div.col-xl-2.offset-xl-0.offset-md-0.offset-sm-0
            button(type="submit", class="btn btn-outline-"+settings.theme)=__("Update profile")