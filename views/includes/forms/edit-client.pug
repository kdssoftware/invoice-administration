#clientEdit
    form(action=((currentUrl==="clientNew")?'/client/new':'/edit/client/'+client._id) ,method='post')
        p=msg
        div(class="form-row")
            div(class="form-group col-md-5")
                label(for="title")=__('Client name')+'*'
                if client
                    input(type="text",class="form-control",value=(client.clientName)?client.clientName:"" ,name="clientName")
                else
                    input(type="text",class="form-control",name="clientName")
            div(class="form-group col-md-2")
            div(class="form-group col-md-5")
                label(for="title")=__('Firm name')
                if client
                    input(type="text",class="form-control",value=(client.firm)?client.firm:"", name="firm")
                else
                    input(type="text",class="form-control", name="firm")
            div(class="form-group col-md-3")
                label(for="title")=__('Street name')+'*'
                if client
                    input(type="text",class="form-control",value=(client.street)?client.street:"", name="street")
                else
                    input(type="text",class="form-control", name="street")
            div(class="form-group col-md-2")
                label(for="title")=__('Street number')
                if client
                    input(type="text",class="form-control",value=(client.streetNr)?client.streetNr:"", name="streetNr")
                else
                    input(type="text",class="form-control", name="streetNr")
            div(class="col-md-2")
            div(class="form-group col-md-2")
                label(for="title")=__('VAT number')
                if client
                    input(type="text",class="form-control",value=(client.vat)?client.vat:"",name="vat")
                else
                    input(type="text",class="form-control",name="vat")
            div(class="form-group col-md-2")
                label(for="title")=__('VAT percentage')+'*'
                if client
                    input(class="form-control", type="number" min="0" max="100", step="any", value=(client.vatPercentage)?client.vatPercentage:settings.vatPercentage,name="vatPercentage",required="true")
                else
                    input(class="form-control", type="number" min="0" max="100", step="any", value=settings.vatPercentage name="vatPercentage",required="true")
            div(class="form-group col-md-2")
                label(for="title")=__('Account number')
                if client
                    input(type="text",class="form-control",value=(client.bankNr)?client.bankNr:"", name="bankNr")
                else
                    input(type="text",class="form-control", name="bankNr")
            div(class="form-group col-md-1")
                label(for="title")=__('Postal')
                if client
                    input(type="number",class="form-control",value=(client.postalCode)?client.postalCode:"", name="postalCode")
                else
                    input(type="number",class="form-control", name="postalCode")
            div(class="form-group col-md-2")
                label(for="title")=__('Place')+'*'
                if client
                    input(type="text",class="form-control",value=(client.place)?client.place:"", name="place" required)
                else
                    input(type="text",class="form-control", name="place" required)
            div(class="form-group col-md-2")
            div.field_wrapper(class="form-group col-md-4")
                label #{__('E-mails')}
                if client
                    input(type="email", class="form-control", value=(client.email) ? client.email[0] : '', name="emails0", placeholder="voorbeeld@email.be")
                else
                    input(type="email", class="form-control", name="emails0", placeholder="voorbeeld@email.be")
            div.form-group.col-md-1
                a(href="javascript:void(0);" class="add_button" title="Add field")
                    span.fa-color-buttons
                        i.fas.fa-plus-square.fa-2x
        hr
        if client
            button(type="submit", class="btn btn-outline-" + settings.theme)=__('Update')
        else
            button(type="submit", class="btn btn-outline-" + settings.theme) #{__('Add')}