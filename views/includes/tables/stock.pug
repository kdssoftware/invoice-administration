table(class="table table-striped table-sm ",id="hoofdTabel")
    thead(style="color:#FFF",class="thead shadow bg-" + settings.theme)
        tr
            th(scope="col") #{__('Name')}
            th(scope="col") #{__('Price')}
            th(scope="col") #{__('Amount')}
            th(scope="col") #{__('Actions')}
    tbody
        each item in stock
            tr
                td=item.name
                td=item.price.toFixed(2)+"â‚¬ /kg"
                td
                    div(class="dropdown")
                        button(class="btn btn-outline-"+settings.theme+" /*dropdown-toggle*/" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            span=item.amount
                        //div(class="dropdown-menu" aria-labelledby="dropdownMenu2")
                          a(class="dropdown-item",onclick="addMateriaal()",href="#") +
                          input(type="number")
                          a(class="dropdown-item",onclick="removeMateriaal()",href="#") -
                          input(type="number")
                td
                    div.btn-group.dropleft
                        a(role="button", class="btn btn-outline-"+settings.theme+" btn-sm dropdown-toggle", href="#", id="actionsDropdown", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{__('Actions')}
                        div(class="dropdown-menu", aria-labelledby="actionsDropdown")
                            a(class="dropdown-item", href='/edit-mat/'+item._id) #{__('Edit')}
                            a(class="dropdown-item", href='/delete-mat/'+item._id) #{__('Delete')}