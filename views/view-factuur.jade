html
    head
        title=title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    body
      header          
            button(type="button",href='/',class="btn btn-outline-primary") Home
            button(type="button",href='/edit-profile',class="btn btn-outline-primary") Mijn profiel
            a(style="max-width:10%;max-height:5%",href="https://identity.basecone.com/authentication/login")
                img(style="max-width:8%;max-height:5%",src="https://www.itjobs.pt/empresa/basecone/logo/social", alt="basecone")
          div(class="jumbotron")
            p(class="lead") bekijk factuur
            p=msg
            table(class="table table-striped table-dark")
              tbody
                tr
                  th(scope="row") Datum
                  td
                    h4=factuur.datum
                tr
                  th(scope="row") Factuur Nr
                  td
                    h4=factuur.factuurNr
                tr
                  if factuur.voorschot!= 0
                    th(scope="row") vooschot
                    td
                      h4=factuur.voorschot
