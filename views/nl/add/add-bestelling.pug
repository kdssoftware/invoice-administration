              li(class="nav-item")
                a(class="nav-link" href="/berekeningen/"+loginHash)
                  span(data-feather="book")
                  span Berekeningen
              li(class="nav-item")
                a(class="nav-link" href="/settings/"+loginHash)
                  span(data-feather="settings")
                  span Settings
            h6(class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted")
              span Bookmarks
            ul(class="nav flex-column mb-2")
              li(class="nav-item")
                a(class="nav-link",href='https://identity.basecone.com/authentication/login')
                  span(data-feather="bookmark")
                  span Basecone
            h6(class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted")
              span Dit document - opties
            ul(class="nav flex-column mb-2")
              li(class="nav-item")
                a(class="nav-link active",href='/add-bestelling' + "/" + factuur._id + "/" + loginHash)
                  span(data-feather="plus-circle")
                  span Nieuwe bestelling
                  span(class="sr-only") (current)
        main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
          if factuur.factuurNr
            h2(class="pt-3")="Factuur " + factuur.factuurNr+" ("+contact.contactPersoon+")"
          if factuur.offerteNr && !factuur.factuurNr
            h2(class="pt-3")="Offerte " + factuur.offerteNr+" ("+contact.contactPersoon+")"
          if factuur.creditnr && !factuur.offerteNr && !factuur.factuurNr
            h2(class="pt-3")="Creditnota " + factuur.creditnr+" ("+contact.contactPersoon+")"
          hr
          form(action='/add-bestelling/'+factuur._id+'/'+loginHash,method='post')
            div(class="form-row")
              div(class="form-group col-md-10")
                label(for="title") Beschrijving
                input(type="text",class="form-control",name="beschrijving", required)
              div(class="form-group col-md-2")
                label(for="title") Aantal
                input(type="number",class="form-control",name="aantal", required)
              div(class="form-group col-md-2")
                label(for="title") Bedrag voor één
                input(type="number",class="form-control",name="bedrag",step=".01" required)
            hr
            button(type="submit",class="btn btn-outline-"+settings.thema) toevoegen
