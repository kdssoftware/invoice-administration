  body(onpageshow='drawChart(['+totaal+'])')
    header
      nav(class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow")
        a(class="navbar-brand col-sm-3 col-md-2 mr-0",href="/edit-profile/"+loginHash)=profile.firma
