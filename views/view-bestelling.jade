html
    head
        title=title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    body
      header          
        a(class="button",href='/')
          button(style="margin:.75%",type="button",class="btn btn-outline-primary") Home
        a(class="button",href='/edit-profile')
          button(style="margin:.75%",type="button",class="btn btn-outline-primary") Mijn profiel
        a(style="max-width:10%;max-height:5%",href="https://identity.basecone.com/authentication/login")
          img(style="max-width:8%;max-height:5%",src="https://www.itjobs.pt/empresa/basecone/logo/social", alt="basecone")
      main
        div(class="jumbotron")
            p(class="lead") bekijk bestelling
            p=msg
            table(class="table table-striped table-dark")
              tbody
                tr
                  th(scope="row") beschrijving
                  td
                    h4=bestelling.beschrijving
                tr
                  th(scope="row") aantal
                  td
                    h4=bestelling.aantal
                tr
                  th(scope="row") bedrag
                  td
                    h4=bestelling.bedrag+" €"
                tr
                  th(scope="row") totaal
                  td
                    h4=(bestelling.aantal*bestelling.bedrag)+" €"
          
