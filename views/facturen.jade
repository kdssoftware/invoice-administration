html
    head
        title=title
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")
        script.
    body
      header          
        a(class="button",href='/')
          button(style="margin:.75%",type="button",class="btn btn-outline-primary") Home
        a(class="button",href='/edit-profile')
          button(style="margin:.75%",type="button",class="btn btn-outline-primary") Mijn profiel
        a(style="max-width:10%;max-height:5%",href="https://identity.basecone.com/authentication/login")
          img(style="max-width:8%;max-height:5%",src="https://www.itjobs.pt/empresa/basecone/logo/social", alt="basecone")
      main
          div(class="jumbotron")    
              p(class="lead")=description
              hr
              table(class="table")
                  tr(class="thead-dark")                                  
                        td
                          a(href='/add-factuur/'+contact._id,class="button")
                            button(type="button",id="knop", class="btn btn-secondary btn-lg btn-block")  Nieuwe Factuur
                        tr
                            th(scope="col") Facturen
                            th
                            th(scope="col") Bestellingen
                            th(scope="col") Acties
                        
                        each factuur in facturenLijst
                            tr
                                td=factuur.factuurNr
                                td
                                  input(class="form-check-input" type="checkbox" id="#{factuur._id}" onclick="knop()")
                                  script.
                                    var id = "#{factuur._id}";
                                    var isBetaald = Boolean(#{factuur.isBetaald});
                                    console.log(isBetaald);
                                    if(isBetaald){
                                      document.getElementById("#{factuur._id}").checked = true;
                                      }else{
                                        document.getElementById("#{factuur._id}").checked = false;
                                      }
                                      function knop(){
                                        console.log("setting window location to: /change-betaald/"+id);
                                        window.location="/change-betaald/"+id;
                                      }
                                      
                                td 
                                    a(href='/bestellingen/'+factuur._id,class="button") bestellingen
                                td
                                  ul(class="list-group")
                                    li(class="list-group-item")
                                      a(href='/edit-factuur/'+contact._id+'/'+factuur._id,class="button") aanpassen
                                    li(class="list-group-item")
                                      a(href='/delete-factuur/'+contact._id+'/'+factuur._id,class="button") verwijder
                                    li(class="list-group-item")
                                      a(href='/view-factuur/'+factuur._id,class="button") bekijk
                                    li(class="list-group-item")
                                      a(href='/createPDF/'+factuur._id,id="target",target="_blank",class="button") maak pdf
