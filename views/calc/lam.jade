html
  head
    title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script.
      console.log("Verander action form link !!!");
  body
    header
      nav(class="navbar navbar-expand-md navbar-#{settings.nav} bg-#{settings.theme}")
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="navbarNav")  
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class="nav-link active" , href='/index'+"/"+loginHash) Home
            li(class="nav-item")
              a(class="nav-link active", href='/edit-profile'+"/"+loginHash) Mijn profiel    
            li(class="nav-item")
              a(class="nav-link active", href='/settings'+"/"+loginHash) Settings
            li(class="nav-item")
              a(class="nav-link", href='https://identity.basecone.com/authentication/login')
                img(width="100", height="24", src="/basecone.png", alt="basecone")
          span(class="navbar-text")
            div(class="row")
              div(class="col-4 mr-auto")
                button(type="button", class="btn btn-light btn-sm", disabled)
                  h6=description
              div(class="col-8")  
                form(class="form-inline" action="/zoeken"+"/"+loginHash, method="post")
                  input(class="form-control" type="search" placeholder="zoeken" aria-label="Search" name="search")
    main
      div(class="jumbotron")
        div(class="row no-gutters")
          div(class="col-9 mr-auto")
          div(class="col-2")
            a(href='/index'+"/"+loginHash,class="button")
              if settings.theme == "light"
                button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block") terug
              if settings.theme != "light"
                button(type="button",class="btn btn-#{settings.theme} btn-lg btn-block") terug
        h2 Berekenen van Lamineren
        hr
        div(class="alert alert-danger col-lg-7 col-md-12 col-sm-12" role="alert") Deze berekening werkt nog niet!
        form(action='/deze-berekening-is-nog-niet-gemaakt'+"/"+loginHash,method='post') 
          div(class="form-row")
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") Lengte (inch)
              input(type="number",class="form-control",name="L",step=".01", required)
            div(class="form-group col-lg-7  col-md-6 col-sm-12")
              label(for="title") Breedte (inch)
              input(type="number",class="form-control",name="B",step=".01", required)                                
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") Hoogte (inch)
              input(type="number",class="form-control",name="H",step=".01", required)
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") Extra dikte van laminatie (inch)
              input(type="number",class="form-control",name="X",step=".01", required)
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") m² (inch)
              input(type="number",class="form-control",name="M",step=".01", required)
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") lagen
              input(type="number",class="form-control",name="F", required)
            div(class="form-group col-lg-7   col-md-6 col-sm-12")
              label(for="title") Werk tarief (€/uur)
              input(type="number",class="form-control",name="W",step=".01", required)
          hr
          button(type="submit",class="btn btn-#{settings.oppo}" disabled) Berekenen
