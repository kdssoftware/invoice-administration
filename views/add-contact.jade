html
    head
        title=title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    body
          header          
                  button(type="button",class="btn btn-outline-primary")
                      a(class="nav-link",href='/') Home
                  button(type="button",class="btn btn-outline-primary")
                      a(class="nav-link",href='/edit-profile') Mijn profiel
      div(class="jumbotron")
        p(class="lead") contact toevoegen
          hr
          form(action='/add-contact',method='post')
            p=msg
              div(class="form-row")
                div(class="form-group col-md-6")
                  label(for="title") firma
                  input(type="text",name="firma",class="form-control",placeholder="firma en co.")
                div(class="form-group col-md-6")
                  label(for="title") contact persoon (*)
                  input(type="text",name="contactPersoon",class="form-control",placeholder="Jan janssens", required)
                div(class="form-group col-md-6")
                  label(for="title") straatnaam (*)
                  input(type="text",name="straat",class="form-control",placeholder="grotestraat", required)
                div(class="form-group col-md-6")
                  label(for="title") straat nr
                  input(type="number",name="straatNr",class="form-control",placeholder="12")
                div(class="form-group col-md-6")
                  label(for="title") postcode
                  input(type="text",name="postcode",class="form-control",placeholder="1234")
                div(class="form-group col-md-6")
                  label(for="title") plaatsnaam (*)
                  input(type="text",name="plaats",class="form-control",placeholder="Gent", required)
                div(class="form-group col-md-6")
                  label(for="title") btw-nummer
                  input(type="text",name="btwNr",class="form-control",placeholder="1234.123.123")
              button(type="submit",class="btn btn-primary") toevoegen
