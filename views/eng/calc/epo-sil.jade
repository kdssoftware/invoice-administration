html
  head
    title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script.
      function vars(){$("#vars_id").toggle();}  
  body
    header
      nav(class="navbar navbar-expand-md navbar-#{settings.nav} bg-#{settings.thema}")
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="navbarNav")  
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class="nav-link active" , href='/index'+"/"+loginHash) Home
            li(class="nav-item")
              a(class="nav-link active", href='/edit-profile'+"/"+loginHash) My profile    
            li(class="nav-item")
              a(class="nav-link active", href='/settings'+"/"+loginHash) Settings
            li(class="nav-item")
              a(class="nav-link", href='https://identity.basecone.com/authentication/login')
                img(width="100", height="24", src="/basecone.png", alt="basecone")
          span(class="navbar-text")
            div(class="row")
              div(class="col-4 mr-auto")
                button(type="button", class="btn btn-light btn-sm", disabled)
                  h6=description
              div(class="col-8")  
                form(class="form-inline" action="/zoeken"+"/"+loginHash, method="post")
                  input(class="form-control" type="search" placeholder="Search" aria-label="Search" name="search")
    main
      div(class="jumbotron")
        div(class="row no-gutters")
          div(class="col-9 mr-auto")
          div(class="col-2")
            a(href='/index'+"/"+loginHash,class="button")
              if settings.thema == "light"
                button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block") Back
              if settings.thema != "light"
                button(type="button",class="btn btn-#{settings.thema} btn-lg btn-block") Back
          h2 Calulating for epoxy and silicon
        hr
        div(class="row")
          div(class="col-lg-2 col-md-1 col-lg-0")
          if aangepast == 1
            div(class="alert alert-success col-lg-8 col-md-10 col-sm-12" role="alert") Internal variables successfully changed.
        form(action='/epo-sil-oplossing/'+loginHash,method='post')
          div(class="form-row")
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") length (inch)
              input(type="number",class="form-control",name="L",step=".01", required)
            div(class="form-group col-lg-7  col-md-6 col-sm-12")
              label(for="title") width (inch)
              input(type="number",class="form-control",name="B",step=".01", required)                                
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") Height (inch)
              input(type="number",class="form-control",name="H",step=".01", required)
            div(class="form-group col-lg-7 col-md-6 col-sm-12")
              label(for="title") Extra layer of thick silicon (inch)
              input(type="number",class="form-control",name="X",step=".01", required)
            div(class="form-group col-lg-7   col-md-6 col-sm-12")
              label(for="title") Working price (â‚¬/uur)
              input(type="number",class="form-control",name="W",step=".01", required)
          hr
          button(type="submit",class="btn btn-#{settings.oppo}") Calulate
        button(type="button",onclick="vars()",class="btn btn-#{settings.oppo} btn-md") Edit interal variables
        form(action='/epo-sil/update-vars/'+loginHash,method='post')
          div(class="form-row")
            div(id="vars_id" class="col-12",style="display:none")
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="e1") Ae = ((L + X) * (B + X) * (H + X)) * ____
                input(type="string",class="form-control",value=e1,name="e1",placeholder="e1", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="e2") Doe = ((L + X + 0.4) * (B + X + 0.4) * (H + X + 0.4)) * ____
                input(type="string",class="form-control",value=e2,name="e2",placeholder="e2", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="e3") Me = (1 / ____) * De
                input(type="string",class="form-control",value=e3,name="e3",placeholder="e3", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="e4") Pe = (____ * De)
                input(type="string",class="form-control",value=e4,name="e4",placeholder="e4", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="s1") Dos = ((L + X) * (B + X) * (H + X)) * _____
                input(type="string",class="form-control",value=s1,name="s1",placeholder="s1", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="s2") As = (L * B * H) * ____
                input(type="string",class="form-control",value=s2,name="s2",placeholder="s2", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="s3") Ms = (1 / ____) * Ds
                input(type="string",class="form-control",value=s3,name="s3",placeholder="s3", required)
              div(class="col-lg-8 col-md-6 col-sm-4")
                label(for="s4") Ps = (____ * Ds)
                input(type="string",class="form-control",value=s4,name="s4",placeholder="s4", required)
              button(type="string",class="btn btn-#{settings.oppo} btn-md") Upload changes
