html
  head
    include ../includes/htmlHead
    script.
      function show_mail1(){
        $('#mail1').show();
        $('#col3_1').hide();
        $('#extra_mail1').hide();
        $('#extra_mail2').show();
        $('#col10').show();
      }
      function show_mail2(){
        $('#mail2').show();
        $('#col10').hide();
        $('#col7').show();
        $('#extra_mail2').hide();
      }
      function info() {
        $("#info").toggle();
      };
      $(document).ready(function () {
        feather.replace();
      });
body
  header
    include ../includes/topBar
    div(class="container-fluid")
      div(class ="row")
        nav(class="col-md-2 d-none d-md-block bg-light sidebar")
          div(class="sidebar-sticky")
            include ../includes/navFlexCollumn
            include ../includes/bookmarks
            include ../includes/clientOptionMenu
        main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
          h2(class="pt-3") #{__('Add client')}
          hr
          include ../includes/messages
          form(action='/client/new',method='post')
            p=msg
            div(class="form-row")
              div(class="form-group col-md-5")
                label(for="title") #{__('Client name')} *
                input(type="text",class="form-control",name="clientName")
              div(class="form-group col-md-2")
              div(class="form-group col-md-5")
                label(for="title") #{__('Firm')}
                input(type="text",class="form-control",name="firm")
              div(class="form-group col-md-3")
                label(for="title") #{__('Streetname')} *
                input(type="text",class="form-control",name="street" )
              div(class="form-group col-md-2")
                label(for="title") #{__('Street Nr')}
                input(type="text",class="form-control",name="streetNr")
              div(class="col-md-2")
              div(class="form-group col-md-3")
                label(for="title") #{__('E-mail')}
                input(type="text",class="form-control",name="email",placeholder="voorbeeld@email.be")
              div(class="form-group col-md-2")
                label(for="title") #{__('VAT-number')}
                input(type="text",class="form-control",name="vat")
              div(class="form-group col-md-2")
                label(for="title") #{__('Banking number')}
                input(type="text",class="form-control",name="bankNr")
              div(class="form-group col-md-1")
                label(for="title") #{__('postal')}
                input(type="number",class="form-control",name="postal")
              div(class="form-group col-md-2")
                label(for="title") #{__('place')} *
                input(type="text",class="form-control",name="place")
              div(class="col-md-2")
            hr
            button(type="submit",class="btn btn-outline-"+settings.theme) #{__('Add')}
