html
  head
    include ../includes/htmlHead
    script.
      function show_mail1(){
        $('#mail1').show();
        $('#col3_1').hide();
        $('#extra_mail1').hide();
        $('#extra_mail2').show();
        $('#col10').show();
      }
      function show_mail2(){
        $('#mail2').show();
        $('#col10').hide();
        $('#col7').show();
        $('#extra_mail2').hide();
      }
      function info() {
        $("#info").toggle();
      };
      $(document).ready(function () {
        feather.replace();
        let maxField = 10; //Input fields increment limitation
        let addButton = $('.add_button'); //Add button selector
        let wrapper = $('.field_wrapper'); //Input field wrappe
        let x = 5; //Initial field counter is 1
        let emails = "#{client.email}".split(',');
         //New input field html

        //Once add button is clicked
        $(addButton).click(function () {
          //Check maximum number of input fields
          if (x < maxField) {
            x++; //Increment field counter
            let currentEmail = (!emails[x-5])?"":emails[x-5];
            let fieldHTML = '<div><input class="form-control" type="text" value="'+currentEmail+'" name="emails[]"/><a href="javascript:void(0);" class="remove_button"><span class="fa-color-buttons"><i class="fas fa-minus-square""></span></i>\n</a></div>';
            $(wrapper).append(fieldHTML); //Add field html
          }
        });

        //Once remove button is clicked
        $(wrapper).on('click', '.remove_button', function (e) {
          e.preventDefault();
          $(this).parent('div').remove(); //Remove field html
          x--; //Decrement field counter
        });
      });
    style.
      span.fa-color-buttons {
      color:#b1b1b1;
      }
      span.fa-color-buttons:hover {
        color:#007bff;
      }
body
    include ../includes/topBar
    div(class="container-fluid")
      div(class ="row")
        nav(class="col-md-2 d-none d-md-block bg-light sidebar")
          div(class="sidebar-sticky")
            include ../includes/navFlexCollumn
            include ../includes/bookmarks
            if currentUrl !== "clientNew"
              include ../includes/invoiceOptionMenu
        main(role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4")
          h2(class="pt-3")=(currentUrl==="clientNew")?__('Add client'):__("Edit client")
          hr
          include ../includes/messages
          form(action=((currentUrl==="clientNew")?'/client/new':'/edit/client/'+client._id) ,method='post')
            p=msg
            div(class="form-row")
              div(class="form-group col-md-5")
                label(for="title")=__('Client name')+'*'
                input(type="text",class="form-control",value=client.clientName,name="clientName" required)
              div(class="form-group col-md-2")
              div(class="form-group col-md-5")
                label(for="title")=__('Firm name')
                input(type="text",class="form-control",value=client.firm,name="firm")
              div(class="form-group col-md-3")
                label(for="title")=__('Street name')+'*'
                input(type="text",class="form-control",value=client.street,name="street")
              div(class="form-group col-md-2")
                label(for="title")=__('Street number')
                input(type="text",class="form-control",value=client.streetNr,name="streetNr")
              div(class="col-md-2")
              div.field_wrapper(class="form-group col-md-3")
                label(for="title") #{__('E-mails')}
                div
                  input(type="text",class="form-control",value=(client.email)?client.email[0]:'', name="emails[]",placeholder="voorbeeld@email.be")
                  a(href="javascript:void(0);" class="add_button" title="Add field")
                    span.fa-color-buttons
                      i.fas.fa-plus-square.fa-2x
              div(class="form-group col-md-2")
                label(for="title")=__('VAT number')
                input(type="text",class="form-control",value=client.vat,name="vat")
              div(class="form-group col-md-2")
                label(for="title")=__('VAT percentage')
                input(type="text",class="form-control",step="any",value=(client.vatPercentage)?client.vatPercentage:settings.vatPercentage,name="vatPercentage",required="true")
              div(class="form-group col-md-2")
                label(for="title")=__('Account number')
                input(type="text",class="form-control",value=client.bankNr,name="bankNr")
              div(class="form-group col-md-1")
                label(for="title")=__('Postal')
                input(type="number",class="form-control",value=client.postalCode,name="postalCode")
              div(class="form-group col-md-2")
                label(for="title")=__('Place')+'*'
                input(type="text",class="form-control",value=client.place,name="place" required)
            hr
            button(type="submit",class="btn btn-outline-"+settings.theme)=__('Update')
