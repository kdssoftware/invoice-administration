html
  head
    title=title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script.
      function toon(){
        $("#berekeningen").show();
        $("#toon_knop").hide();
        $("#verberg_knop").show();
      }
      function verberg(){
        $("#berekeningen").hide();
        $("#verberg_knop").hide();
        $("#toon_knop").show();
      }
  body
    header
      nav(class="navbar navbar-expand-sm navbar-#{settings.nav} bg-#{settings.thema}")
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="navbarNav")  
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class="nav-link active" , href='/') Home
            li(class="nav-item")
              a(class="nav-link active", href='/edit-profile') Mijn profiel    
            li(class="nav-item")
              a(class="nav-link active", href='/settings') Settings
            li(class="nav-item")
              a(class="nav-link", href='https://identity.basecone.com/authentication/login')
                img(width="100", height="24", src="/basecone.png", alt="basecone")
          span(class="navbar-text")
            div(class="row")
              div(class="col-4 mr-auto")
                button(type="button", class="btn btn-light btn-sm", disabled)
                  h6=description
              div(class="col-8")  
                form(class="form-inline" action="/zoeken" method="post")
                  input(class="form-control" type="search" placeholder="zoeken" aria-label="Search" name="search")
    main
      div(class="jumbotron")
        div(class="row no-gutters")
          div(class="col-3" id="toon_knop")
            if settings.thema == "light"
              button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block", onclick="toon()") Toon berekeningen
            if settings.thema != "light"
              button(type="button",class="btn btn-#{settings.thema} btn-lg btn-block", onclick="toon()") Toon berekeningen
          div(class="col-3" id="verberg_knop",style="display:none;" )
            if settings.thema == "light"
              button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block", onclick="verberg()") Verberg berekeningen
            if settings.thema != "light"
              button(type="button",class="btn btn-#{settings.thema} btn-lg btn-block", onclick="verberg()") Verberg berekeningen
          div(class="col-7")
          div(class="col-2")
            a(href='/berekeningen',class="button")
              if settings.thema == "light"
                button(type="button",class="btn btn-#{settings.oppo} btn-lg btn-block") terug
              if settings.thema != "light"
                button(type="button",class="btn btn-#{settings.thema} btn-lg btn-block") terug
        hr 
        div(id="berekeningen", style="display:none;")
          div(class="row")
            div(class="col-2")
              h4
                span(class="badge badge-secondary") Berekening Siliconen
            div(class="col-4")
            div(class="col-2")
              h4
                span(class="badge badge-secondary") Berekening Epoxie
            div(class="col-6")
              p(class="lead") ( #{L}" * #{B}" * #{H}" ) * 0.0185 = #{As.toFixed(3)} kg
            div(class="col-6")
              p(class="lead") ( #{L}" * #{B}" * #{H}" ) * 0.018 = #{Ae.toFixed(3)} kg
            div(class="col-6")
              p(class="lead") ( #{Ls.toFixed(2)}" * #{Bs.toFixed(2)}" * #{Hs.toFixed(2)}" ) * 0.0185 = #{Dos.toFixed(3)} kg
            div(class="col-6")
              p(class="lead") ( #{Le.toFixed(2)}" * #{Be.toFixed(2)}" * #{He.toFixed(2)}" ) * 0.018 = #{Doe.toFixed(3)} kg
            div(class="col-6")
              p(class="lead") #{Dos.toFixed(3)} kg - #{As.toFixed(3)} kg = #{Ds.toFixed(3)} kg
            div(class="col-6") 
              p(class="lead") #{Doe.toFixed(3)} kg - #{Ae.toFixed(3)} kg = #{De.toFixed(3)} kg
          hr
          div(class="row")
            div(class="col-6")
              p(class="lead") #{W} €/uur * ( 1/2.23 kg/uur ) + 13.50 €/uur * #{Ms.toFixed(3)} kg = #{Pts.toFixed(2)} €
            div(class="col-6") 
              p(class="lead") #{W} €/uur * ( 1/3.50 kg/uur ) + 19.60 €/uur * #{Me.toFixed(3)} kg = #{Pte.toFixed(2)} €
          div(class="row")  
            div(class="col-5")
            div(class="col-5")
              p(class="lead")  #{Pte.toFixed(2)} € + #{Pts.toFixed(2)} € = #{Pt.toFixed(2)} €
            div(class="col-2")
          hr
        div(class="container")
          if settings.thema == "dark" || settings.thema == "danger" || settings.thema == "info"
            table(class="table table-#{settings.oppo} table-striped")
              tbody
                tr
                  th(scope="row")
                    h4 Siliconen
                  td
                    h4=Ds.toFixed(3)+" kg"
                tr
                  th(scope="row")
                    h4 Epoxie
                  td
                    h4=De.toFixed(3)+" kg"
                tr
                  th(scope="row")
                    h4 Siliconen + Werkuren
                  td
                    h4=Pts.toFixed(2)+" €"
                tr
                  th(scope="row") 
                    h4 Epoxie + Werkuren
                  td
                    h4=Pte.toFixed(2)+" €"
                tr
                  th(scope="row") 
                    h3 Totale Prijs
                  td
                    h3=Pt.toFixed(2)+" €"
          else
            table(class="table table-#{settings.oppo} table-striped")
              tbody
                tr
                  th(scope="row")
                    h4 Siliconen
                  td
                    h4=Ds.toFixed(3)+" kg"
                tr
                  th(scope="row")
                    h4 Epoxie
                  td
                    h4=De.toFixed(3)+" kg"
                tr
                  th(scope="row")
                    h4 Siliconen + Werkuren
                  td
                    h4=Pts.toFixed(2)+" €"
                tr
                  th(scope="row") 
                    h4 Epoxie + Werkuren
                  td
                    h4=Pte.toFixed(2)+" €"
                tr
                  th(scope="row") 
                    h3 Totale Prijs
                  td
                    h3=Pt.toFixed(2)+" €"
