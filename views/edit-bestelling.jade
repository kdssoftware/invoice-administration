html
    head
        title=title
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    body
      header
        nav(class="navbar navbar-expand-lg navbar-light bg-secondary")
          div(class="collapse navbar-collapse", id="navbarNav")  
            ul(class="navbar-nav mr-auto")
              li(class="nav-item")
                    a(class="nav-link", href='/') Home
              li(class="nav-item")
                  a(class="nav-link", href='/edit-profile') Mijn profiel    
              li(class="nav-item")
                  a(class="nav-link", href='https://identity.basecone.com/authentication/login')
                    img(width="100", height="24", src="/basecone.png", alt="basecone")
            span(class="navbar-text")
              button(type="button", class="btn btn-light btn-sm", disabled)=description
      main
        div(class="jumbotron")
              p(class="lead")=description
                hr
                form(action='/edit-bestelling/'+bestelling._id,method='post')
                    p=msg
                    div(class="form-row")
                      div(class="form-group col-md-6")
                              label(for="title") beschrijving
                              input(type="text",class="form-control",value=bestelling.beschrijving,name="beschrijving", required)
                      div(class="form-group col-md-6")
                              label(for="title") aantal
                              input(type="number",class="form-control",value=bestelling.aantal,name="aantal", required)                                
                      div(class="form-group col-md-6")
                              label(for="title") bedrag voor één
                              input(type="String",class="form-control",value=bestelling.bedrag,name="bedrag", required)
                    button(type="submit",class="btn btn-primary") bijwerken
